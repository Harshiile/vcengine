generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  username     String   @unique
  email        String   @unique
  passwordHash String
  refreshToken String   @unique
  avatarUrl    String?
  createdAt    DateTime @default(now())

  Workspace Workspace[]
  Issues    Issues[]
}

enum WorkspaceType {
  Public
  Private
}

model Workspace {
  id           String        @id @default(uuid())
  createdBy    String
  name         String
  type         WorkspaceType
  banner       String?
  activeBranch String?
  createdAt    DateTime      @default(now())

  User     User       @relation(fields: [createdBy], references: [id], onDelete: Cascade, onUpdate: Cascade) // If user deleted then workspace also
  Videos   Videos[]
  Branch   Branch[]
  Versions Versions[]
  Issues   Issues[]
}

enum VideoState {
  Processing
  Uploaded
}

model Videos {
  id           String     @id @default(uuid())
  workspace    String
  width        Int
  height       Int
  version      String
  state        VideoState
  playlistfile String
  createdAt    DateTime   @default(now())

  Workspace Workspace @relation(fields: [workspace], references: [id], onDelete: Cascade, onUpdate: Cascade) // If workspace deleted then videos also
  Version   Versions  @relation(fields: [version], references: [id], onDelete: Cascade, onUpdate: Cascade) // If version deleted then videos also
}

model Segment {
  id               String @id @default(uuid())
  hash             String @unique
  numberOfInstance Int    @default(1)
}

model Branch {
  id                 String   @id @default(uuid())
  name               String
  workspace          String
  createdFromVersion String?
  activeVersion      String?
  createdAt          DateTime @default(now())

  Workspace Workspace? @relation(fields: [workspace], references: [id], onUpdate: Cascade, onDelete: Cascade) // If workspace deleted then branch also
  Versions  Versions[]
}

model Versions {
  id            String   @id @default(uuid())
  branch        String
  workspace     String
  commitMessage String
  createdAt     DateTime @default(now())
  parentVersion String?

  Branch    Branch    @relation(fields: [branch], references: [id], onDelete: Cascade, onUpdate: Cascade) // If branch deleted then versions also
  Workspace Workspace @relation(fields: [workspace], references: [id]) // If workspace deleted then versions also
  Videos    Videos[]
}

enum changeType {
  Add
  Modified
  Revert
  Remove
}

enum IssuesState {
  Open
  Closed
}

model Issues {
  id          String      @id @default(uuid())
  issueNumber Int
  createdBy   String
  workspace   String
  message     String
  state       IssuesState
  createdAt   DateTime    @default(now())

  User      User      @relation(fields: [createdBy], references: [id])
  Workspace Workspace @relation(fields: [workspace], references: [id])
}
